        <script>
(function(){
  const dlg = document.getElementById('imgModal');
  const dlgImg = document.getElementById('imgModalImg');
  const dlgCap = document.getElementById('imgModalCaption');
  const closeBtn = document.getElementById('imgModalClose');

  // Open when clicking any .zoomable image
  document.addEventListener('click', function(e){
    const img = e.target.closest('img.zoomable');
    if(!img) return;
    const full = img.getAttribute('data-full') || img.src;
    dlgImg.src = full;
    dlgImg.alt = img.alt || '';
    dlgCap.textContent = img.alt || '';
    if(typeof dlg.showModal === 'function'){ dlg.showModal(); }
    else { dlg.setAttribute('open',''); } // fallback if <dialog> unsupported
  });

  // Close handlers
  function closeDialog(){
    if(dlg.open && typeof dlg.close === 'function') dlg.close();
    else dlg.removeAttribute('open');
  }
  closeBtn.addEventListener('click', closeDialog);
  document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') closeDialog(); });

  // Click outside image closes (backdrop click)
  dlg.addEventListener('click', function(e){
    const rect = document.getElementById('imgModalImg').getBoundingClientRect();
    const outside = e.clientX < rect.left || e.clientX > rect.right || e.clientY < rect.top || e.clientY > rect.bottom;
    if(outside) closeDialog();
  });
})();
</script>
