        <script>
        // Add simple hover interactions for pillars
        document.querySelectorAll('.pillar').forEach(function(pillar) {
            pillar.addEventListener('click', function() {
                this.style.transform = 'translateY(-12px) scale(1.02)';
                setTimeout(function() {
                    pillar.style.transform = '';
                }, 300);
            });
        });

        // Add hover effects for metric items
        document.querySelectorAll('.metric-item').forEach(function(item) {
            item.addEventListener('mouseenter', function() {
                this.style.backgroundColor = '#ffffff';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '#f8f9fa';
            });
        });
    </script>
